<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer for card -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFDF9" /> <!-- Updated card color -->

        </shape>
    </item>

    <!-- Simulated inner shadow/highlight -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#D7E9FE"
            android:centerColor="#FFFDF9"
            android:endColor="#9EC6F0" /> />
        </shape>
    </item>
</layer-list>
