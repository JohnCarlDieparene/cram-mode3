<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.labactivity.crammode">

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Cram Mode"
        android:roundIcon="@drawable/white_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CramMode"
        tools:targetApi="31">



        <activity android:name=".DashboardActivity" />
        <activity android:name=".Profile" />
        <activity android:name=".ReviewActivity" />
        <activity android:name=".FlashcardActivity" />
        <activity android:name=".QuizActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".CreateActivity" />
        <activity android:name=".Flashcards" />
        <activity android:name=".Quizzes" />
        <activity android:name=".Summaries" />
        <activity android:name=".CreateSummaryActivity" />
        <activity android:name=".DisplaySummariesActivity" />



        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
